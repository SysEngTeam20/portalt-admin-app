# Clerk Authentication
# Get these from your Clerk dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Clerk URL Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Database Configuration
# For development (SQLite)
SQLITE_DB_PATH=./data/portalt.db

# For production (MongoDB)
MONGODB_URI=                    # e.g., mongodb+srv://user:password@cluster.mongodb.net/portalt?retryWrites=true&w=majority

# IBM Cloud Object Storage
# Get these from your IBM Cloud Object Storage instance
COS_ENDPOINT=                  # e.g., s3.eu-gb.cloud-object-storage.appdomain.cloud
COS_ACCESS_KEY_ID=            # Your COS access key ID
COS_SECRET_ACCESS_KEY=        # Your COS secret access key
COS_BUCKET_NAME=              # Your bucket name
COS_INSTANCE_CRN=             # Your COS instance CRN
IBM_CLOUD_REGION=             # e.g., eu-gb

# API Security
# Generate a secure random string for this
API_SECRET_KEY=               # Used for generating secure tokens for RAG access 